import os

# Path where all images are present
folder_path = r"D:\Sailesh Portfolio\Gallery"

# Get list of files in the folder
files = sorted(os.listdir(folder_path))

counter = 1

for file in files:
    old_path = os.path.join(folder_path, file)

    # Skip if it's a folder
    if os.path.isdir(old_path):
        continue

    # Always use .jpg as final extension
    new_name = f"achievement{counter}.jpg"
    new_path = os.path.join(folder_path, new_name)

    # Rename the file
    os.rename(old_path, new_path)

    print(f"Renamed: {file} → {new_name}")
    counter += 1

print("\n✔ All files renamed to .jpg successfully!")
